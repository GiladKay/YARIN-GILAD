<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:text="פגישה"
        android:paddingRight="15dp"
        android:textSize="30sp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text=" קביעת  פגישה"
        android:fontFamily="sans-serif"
        android:shadowRadius="5"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:layout_gravity="right"
            android:text=" שם:"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:layout_gravity="right"
        android:fontFamily="sans-serif"
        android:shadowRadius="5"
        android:text=" "
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMeetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="0/2 "
            android:fontFamily="sans-serif"
            android:shadowRadius="5"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:fontFamily="sans-serif"
            android:text=" מפגשים:"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:hint="תאריך"
            android:textColorHint="@color/cardview_light_background"
            android:textColor="@color/cardview_light_background"
            android:background="@color/purple_700"
            android:fontFamily="sans-serif"
            android:shadowRadius="5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:clickable="true">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:hint="שעה"
            android:textColorHint="@color/cardview_light_background"
            android:textColor="@color/cardview_light_background"
            android:background="@color/purple_700"
            android:fontFamily="sans-serif"
            android:shadowRadius="5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:clickable="true">
        </TextView>
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:layout_gravity="right"
        android:text=" משוב מורה:"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        android:visibility="gone"/>

<androidx.core.widget.NestedScrollView
    android:id="@+id/SV1"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:visibility="gone"
    >
    <TextView
        android:id="@+id/disTMashov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="27sp"/>
</androidx.core.widget.NestedScrollView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:layout_gravity="right"
        android:text=" משוב תלמיד:"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        android:visibility="gone"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/SV2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone">
    <TextView
        android:id="@+id/disSMashov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="27sp"/>
    </androidx.core.widget.NestedScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:backgroundTint="#1C6519"
        android:text="צור פגישה" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMeetingDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C6519"
        android:visibility="gone"
        android:text="הפגישה נעשתה" />
</LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>